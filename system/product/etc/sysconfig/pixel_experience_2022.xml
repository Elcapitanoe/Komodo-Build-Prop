<?xml version="1.0" encoding="utf-8"?>

<!-- These are configurations that should exist on Google's 2022 and newer devices. -->
<config>
    <!-- This is meant to be the canonical feature identifying 2022 and newer devices. -->
    <feature name="com.google.android.feature.PIXEL_2022_EXPERIENCE" />

    <!-- Allow com.google.android.apps.privacy.wildlife to operate while in doze mode and while in battery saver -->
    <allow-in-power-save package="com.google.android.apps.privacy.wildlife" />

    <!-- Allow VPN service to run in the background while in data saving mode. -->
     <allow-in-data-usage-save package="com.google.android.apps.privacy.wildlife" />
</config>